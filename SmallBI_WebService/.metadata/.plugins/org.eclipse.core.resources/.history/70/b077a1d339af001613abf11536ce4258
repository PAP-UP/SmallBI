package entity;

import java.util.Calendar;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.validation.constraints.NotNull;

import org.hibernate.validator.constraints.Length;
import org.hibernate.validator.constraints.NotBlank;

@Entity
public class Cidade {
	
	@Id
	@SequenceGenerator(name="seq_cidade", sequenceName="seq_cidade_id", allocationSize=1)
	@GeneratedValue(generator="seq_cidade", strategy=GenerationType.SEQUENCE)
	private Integer idCidade;
	
	@Length(max=10, message="Hibernate Validator: A dataCadastro não pode conter mais de {max} caracteres!")
	@NotBlank(message="A dataCadastro não pode estar em branco!")
	@NotNull(message="A dataCadastro não pode ser null!")
	@Column(name="dataCadastro", nullable=false, length=10)
	private String dataCadastro;
	private Usuario usuario;
	private String nomeCidade;
	private String siglaCidade;
	private Estado estado;
}
