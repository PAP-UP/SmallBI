Documentação SmallBI API

Entidade Estado:
url: "http://backend.smallbi.com.br:18080/SmallBI_WebService/rest/formaPagamento/"

Listar: 
Método: GET
Path: "http://backend.smallbi.com.br:18080/SmallBI_WebService/rest/formaPagamento/listar"
Retorno:
  {
    "descricao": "Cartão Crédito",
    "idFormaPagamaneto": 1
  }

Adicionar:
Método: POST
Path: "http://backend.smallbi.com.br:18080/SmallBI_WebService/rest/formaPagamento/adicionar"
Parametros: "application/json"
Exemplo:
  {
  	"usuarioId":"1",
    "descricao": "Cartão Crédito"
  }

Alterar:
Método: POST
Path: "http://backend.smallbi.com.br:18080/SmallBI_WebService/rest/formaPagamento/alterar"
Parametros: "application/json"
Exemplo:
  {
  	"idFormaPagamento":"4",
  	"usuarioId":"1",
    "descricao": "Paypal"
  }

Deletar:
Método: POST
Path: "http://backend.smallbi.com.br:18080/SmallBI_WebService/rest/formaPagamento/deletar/{id}"

GetById:
Método: GET
Path: "http://backend.smallbi.com.br:18080/SmallBI_WebService/rest/formaPagamento/getById/{idFormaPagamento}"
Parametros: "application/json"
Exemplo: 
http://backend.smallbi.com.br:18080/SmallBI_WebService/rest/formaPagamento/getById/1
Retorno:
  {
    "descricao": "Cartão Crédito",
    "idFormaPagamaneto": 1
  }